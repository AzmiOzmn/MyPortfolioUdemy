@model SocialMedia
@{
    ViewData["Title"] = "UpdateSocial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title"> Yetenek Güncelle</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya Alanı </div>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="SocialMediaId" />
                        <form method="post">
                            <label>Sosyal Medya Adı</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>İkon</label>
                            <input type="text" asp-for="Icon" class="form-control" />
                            <br />
                            <label>Url</label>
                            <input type="text" asp-for="Url" class="form-control" />
                            <br />


                            <button class="btn btn-primary">Güncelle</button>

                        </form>

                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

