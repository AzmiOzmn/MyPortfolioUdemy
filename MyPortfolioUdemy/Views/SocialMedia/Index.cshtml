@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yetenekler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya Alanı</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                          Sosyal medya hesaplarınızı burdan yönetebilirsiniz .
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Sosyal Medya Adı</th>
                                    <th scope="col">İkon</th>
                                    <th scope="col">Url</th>


                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SocialMediaId</td>

                                        <td>@item.Title</td>
                                        <td>@item.Icon</td>
                                        <td>@item.Url</td>


                                        <td><a href="/SocialMedia/DeleteSocial/@item.SocialMediaId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/SocialMedia/UpdateSocial/@item.SocialMediaId" class="btn btn-success">Güncelle</a></td>

                                    </tr>
                                }

                            </tbody>
                        </table>

                        <a href="/SocialMedia/CreateSocial" class="btn btn-primary">Yeni Sosyal Medya Ekle</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


