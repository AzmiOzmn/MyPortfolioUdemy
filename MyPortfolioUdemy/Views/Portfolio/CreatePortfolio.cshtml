@model Portfolio
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Portfolyo Oluştur</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Portfolyo Alanı</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Alt Açiklama</label>
                            <input type="text" asp-for="SubTitle" class="form-control" />
                            <br />
                            <label>Foto Url</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <label>Url</label>
                            <input type="text" asp-for="Url" class="form-control" />
                            <br />
                            <label>Açiklama</label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <br />
                           
                            <button class="btn btn-primary">Kaydet</button>

                        </form>

                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


