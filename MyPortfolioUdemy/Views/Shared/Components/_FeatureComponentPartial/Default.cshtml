@model List<MyPortfolioUdemy.DAL.Entities.Feature>

<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="https://i.hizliresim.com/jan05zs.jpg" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="home-content">
                <div class="row home-content__main">
                    <h3>@item.Title</h3>
                    <h1>@item.Description</h1>
                </div>
            </div>
        }
    }
    else
    {
        <p>Henüz özellik eklenmedi.</p>
    }

    <!-- Sosyal Medya Linkleri -->
    <ul class="home-social">
        <li><a href="#"><i class="im im-facebook"></i><span>Facebook</span></a></li>
        <li><a href="#"><i class="im im-twitter"></i><span>Twitter</span></a></li>
        <li><a href="#"><i class="im im-instagram"></i><span>Instagram</span></a></li>
        <li><a href="#"><i class="im im-behance"></i><span>Behance</span></a></li>
        <li><a href="#"><i class="im im-pinterest"></i><span>Pinterest</span></a></li>
    </ul>

</section>
